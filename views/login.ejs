<div class="container pb-5 good-font-1 thin-border">
<div class="row justify-content-center mt-5">
    <h1>Login</h1>
  </div>
  <%- include('partials/messages'); %>
  <div class="row mt-5 justify-content-center">
    <form action="/users/login" method="POST" autocomplete="off">
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input
          type="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          placeholder="Enter email"
          name="email"
        />
        <small id="emailHelp" class="form-text text-muted"
          >We'll never share your email with anyone else.</small
        >
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input
          type="password"
          class="form-control"
          id="exampleInputPassword1"
          placeholder="Password"
          name="password"
        />
      </div>
      <div>Don't have an account? <a href="/users/sign-up">Sign up</a>.</div>
  
      <button type="submit" class="btn btn-dark">Login</button>
      <hr />
      <div>
        <a href="/users/auth/google" id='login-google' class="btn btn-white mt-5 border border-dark text-dark"
          >Log in through Google
          <img src="https://img-authors.flaticon.com/google.jpg" width="30px"
        /></a>
      </div>
    </form>
  </div>
</div>